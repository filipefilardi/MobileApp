<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <View
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/darkGrey"
    />

    <LinearLayout
        android:id="@+id/questionContainter"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:backgroundTint="@color/darkGrey"
            android:textColor="@android:color/white"
            android:background="@drawable/corner"
            android:padding="3dp"
            android:id="@+id/status"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AO VIVO"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="16dp"
                android:layout_width="90dp"
                android:layout_height="90dp" />



            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/titleTv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4F5565"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/timeContainer"
                        android:orientation="horizontal"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/hourglass"
                            android:layout_marginStart="16dp"
                            />

                        <TextView
                            android:id="@+id/timeTv"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 min"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/coins"
                            android:layout_marginStart="16dp"
                            />

                        <TextView
                            android:id="@+id/coinsTv"
                            android:textSize="16sp"
                            android:layout_marginStart="8sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000 pts"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activeUsersContainer"
                    android:orientation="horizontal"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/activeUsersIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_people_black_24dp"
                        android:layout_marginStart="16dp"
                        />

                    <TextView
                        android:id="@+id/activeUsersCountTv"
                        android:layout_marginLeft="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x respostas"
                        />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>