<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChallengeInfoActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_margin="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:max="3" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:id="@+id/questionCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/challengeImageView"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/anamaria"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="38dp"
                        />

                    <TextView
                        android:id="@+id/challengeTitleTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/challengeDescriptionTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <Button
                        android:id="@+id/btnOption1"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        />

                    <Button
                        android:id="@+id/btnOption2"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:id="@+id/questionUserInfoCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/questionUserInfoImageView"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/anamaria"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="38dp"
                        />

                    <TextView
                        android:id="@+id/questionUserInfoTitleTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/questionUserInfoDescriptionTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <Button
                        android:id="@+id/questionUserInfoOption1"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        />

                    <Button
                        android:id="@+id/questionUserInfoOption2"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/questionUserInfoOption3"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:visibility="gone"
                android:id="@+id/questionUserDateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/questionUserInfoImageView2"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/anamaria"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="38dp"
                        />

                    <TextView
                        android:id="@+id/questionUserDateInfoTitleTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/questionUserDateInfoDescriptionTv"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="normal"/>


                    <EditText
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/questionUserDateInfoContinueBtn"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="Continuar"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/shareCardView"
                android:visibility="gone"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="56dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/coroa" />

                        <TextView
                            android:id="@+id/shareTitleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Mandou bem!"
                            android:textColor="@color/darkGrey"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                        <TextView
                            android:id="@+id/shareDescriptionTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:text="Fique ligado, logo depois do intervalo a receita será revelada!"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shareTitleTv" />

                        <View
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="120dp"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/colorAccent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shareDescriptionTv" />

                        <TextView
                            android:id="@+id/shareDescription2Tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="Aproveita e compartilha com seus amigos. Quem sabe eles não fazem a receita pra você ;)"
                            app:layout_constraintBottom_toTopOf="@+id/shareButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4" />

                        <Button
                            android:id="@+id/shareButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginStart="32dp"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@color/colorAccent"
                            android:text="Compartilhar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/closeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Fechar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/shareButton"
                            app:layout_constraintTop_toBottomOf="@+id/shareButton" />

                    </android.support.constraint.ConstraintLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>